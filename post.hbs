{{!< default}}

<div class="container">
  <div class="post-navigation">
    <div class="row">
      <div class="col-md-12">
        <a class="btn btn-basic" href="{{@blog.url}}">
          <i class="fa fa-bars fa-1x fa-fw"></i> HOME
        </a>
      </div>
    </div>
  </div>
</div>


{{#post}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <header class="post-header">
        <h1 class="title">{{title}}</h1>
        <section class="meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="DD MMMM YYYY"}} {{tags prefix=" on "}}
          </time>
        </section>
      </header>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="post-content">
        {{content}}
      </div>

      <section class="social">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <i class="fa fa-1x fa-facebook fa-fw"></i>
        </a>
        <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <i class="fa fa-1x fa-twitter fa-fw"></i>
        </a>
        <a href="https://plus.google.com/share?url={{url absolute="true"}}"
          onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <i class="fa fa-1x fa-google-plus fa-fw"></i>
        </a>
      </section>
      <hr>
    </div>
  </div>

  {{#author}}
  <div class="post-author">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

      </div>
    </div>
    <div class="row">
      <div class="col-sm-3 hidden-xs">
        <img src="{{image}}" alt="" class="img-responsive img-circle image"/>
      </div>
      <div class="col-sm-9">
        <h5 class="name">{{name}}</h5>
        <p class="bio">
          {{bio}}
        </p>
        <p class="meta">
          {{#if location}}<i class="fa fa-map-marker"></i>{{location}}{{/if}}
          {{#if website}}<i class="fa fa-globe"></i><a href="#">{{website}}</a>{{/if}}
      </div>
    </div>
  </div>
  {{/author}}

</div>

<section class="read-next">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <h6 class="next-title">YOU MIGHT ENJOY THESE STORIES NEXT</h6>

        {{#next_post}}
        <a href="{{url}}">
          <div class="panel">
            <div class="row">
              <div class="col-md-4 img-container" style="background-image: url({{image}}); background-size:cover">
              </div>
              <div class="col-md-8">
                <h2 class="title">{{title}}</h2>
                <p class="excerpt">
                  {{excerpt characters="120"}} ...
                </p>
              </div>
            </div>
          </div>
        </a>
        {{/next_post}}

        {{#prev_post}}
        <a href="{{url}}">
          <div class="panel">
            <div class="row">
              <div class="col-md-4 img-container" style="background-image: url({{image}}); background-size:cover">
              </div>
              <div class="col-md-8">
                <h2 class="title">{{title}}</h2>
                <p class="excerpt">
                  {{excerpt characters="120"}} ...
                </p>
              </div>
            </div>
          </div>
        </a>
        {{/prev_post}}
      </div>
    </div>
  </div>
</section>

{{/post}}
